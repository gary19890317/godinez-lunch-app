<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_general"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp"
        tools:context=".MainActivity" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="5"
            android:gravity="center_horizontal"
            android:src="@drawable/logo" />

        <LinearLayout
            android:id="@+id/v_mostrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="lanzarUbicacion"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/logo_mostrar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="logo de mostrar"
                android:src="@android:drawable/ic_menu_mylocation" />

            <TextView
                android:id="@+id/mostrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textColor="#D10054" 
                android:text="@string/accion_mostrar"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/v_favoritos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="lanzarFavoritos"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/logo_favoritos"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="logo de favoritos"
                android:src="@drawable/ic_menu_show_list" />

            <TextView
                android:id="@+id/favoritos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textColor="#D10054" 
                android:text="@string/accion_favoritos"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/v_acerca_de"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="lanzarAcercaDe"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/logo_acerca_de"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="logo de acerca de..."
                android:src="@android:drawable/ic_menu_info_details" />

            <TextView
                android:id="@+id/acerca_de"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textColor="#D10054" 
                android:text="@string/accion_acerca_de"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
        
      <LinearLayout
            android:id="@+id/v_salir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="lanzarSalir"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/logo_salir"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="logo de acerca de..."
                android:src="@drawable/ic_menu_logout" />

            <TextView
                android:id="@+id/salir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textColor="#D10054" 
                android:text="@string/accion_salir"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>